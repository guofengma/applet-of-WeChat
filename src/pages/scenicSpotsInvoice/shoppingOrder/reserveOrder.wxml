<view class="container">
    <form bindsubmit="" >
        <view class="inv-info-box bg-white">
            <view class="inv-title">票种名称</view>
            <navigator url="../notice/ticketDescript?source=order" 
                class="section section_flex section_access_after">
                <view class="section_title">票种说明</view>
                <view class="ui-cell__ft_in-access"></view>
            </navigator>
            <view class="section section_flex section_access_after">
                <view class="section_title section_sm">入园日期</view>
                <input name="date" value=""  hidden />
                <view class="ui-date-box section_flex_sp">
                    <view class="ui-border section_flex_fj">
                        <view class="ui-label">今天</view>
                        <view class="ui-price" wx:if="{{detailInfo.price==0}}">免费</view>
                        <view class="ui-price" wx:else>{{detailInfo.price}}</view>
                    </view>
                    <view class="ui-border section_flex_fj">
                        <view class="ui-label">明天</view>
                        <view class="ui-price" wx:if="{{detailInfo.price==0}}">免费</view>
                        <view class="ui-price" wx:else>{{detailInfo.price}}</view>
                    </view>
                    <navigator class="ui-more ui-border section_flex_fj active-color"
                    url="../datePicker/datePicker" hover-class="none">
                        <view class="ui-text" hidden>更多日期</view>
                        <view class="ui-label">2018-11-14</view>
                        <view class="ui-price">￥180</view>
                    </navigator>
                </view>
            </view>

            <view class="section section_flex">
                <view class="section_title">购票数量</view>
                <view class="action-btns section_flex_fj">
                    <text class="btn btn-minus disabled">-</text>
                    <input class="int" value="1" type="number" />
                    <text class="btn btn-plus">+</text>
                </view>
            </view>
        </view>
        <view class="receiver">取票人信息</view>
        <view class="receiver-info-list bg-white">
            <view class="section section_access_after">
                <view class="section_title">取票人</view>
                <input name="receiver" value="" placeholder="请填写" placeholder-style="color:#AAA" maxlength="20" />
            </view>
            <view class="section section_access_after">
                <view class="section_title">手机号码</view>
                <input name="phone" value="" placeholder="请填写" placeholder-style="color:#AAA" maxlength="11" />
            </view>
            <view class="section section_access_after">
                <view class="section_title">身份证号</view>
                <input name="ID" value="" placeholder="请填写" placeholder-style="color:#AAA" maxlength="20" />
            </view>
        </view>
        <view class="ui-bottom-fixed">
            <view class="ui-bottom-inner section_flex_sp">
                <view class="pay-total">应付金额：<text>￥</text><text>0</text></view>
                <button class="action-btn" bindtap="" hover-class="none">立即预定</button>
            </view>
        </view>
    </form>
</view>