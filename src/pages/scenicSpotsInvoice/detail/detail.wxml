<view class="container">
    <view class="swiper-container">
        <swiper autoplay="true">
            <block wx:for="{{imgUrls}}" wx:key="img">
                <swiper-item>
                <image src="{{item}}" class="slide-image" width="100%" height="100%"/>
                </swiper-item>
            </block>
        </swiper>
        <view class="dots">共3张</view>
   </view>
    <view class="tt-box">
        <view class="tt-box-inner bg-white">
            <view class="p-title">上海迪士尼乐园</view>
            <view class="section_box section_flex_sp">
                <view class="p-addr">
                <image class="icon icon-local" src="/assets/images/location.png" />
                上海市徐汇区蒲汇塘路口101号</view>
                <view class="ui-cell__ft_in-access"></view>
            </view>
            <view  class="section_box">
                <view class="p-time">
                    <image class="icon icon-clock" src="/assets/images/clock.png" />
                    <text class="">开放时间：</text>
                    <view class="t-desc">北京时间8点-9点收到啦收到福利北京时间8点-9点收到啦收到福利</view>
                </view>
            </view>
        </view>
    </view>
    <view class="ui-content bg-white">
        <view class="ui-tabs">
            <view class="ui_tab_item">购票
            </view>
            <view class="ui_tab_item ui-tab_active">景点介绍
            </view>
        </view>
        <view class="tab-cont">
            <view  class="tab-cont-item">
                <view class="ticket-info-box">
                    <view class="ticket-item pad">
                        <view class="ticket-desc clear">
                            <view class="box-left left">
                                <view class="t-name">票种名称票种名称</view>
                                <text class="border-box">支持退票</text>
                            </view>
                            <view class="t-price right">￥150</view>
                        </view>
                        <view class="ticket-action">
                            <navigator class="ticket-intro" url="../notice/ticketDescript" hover-class="none">
                                票种说明 <image src="/assets/images/arrow_right.png" />
                            </navigator>
                            <view class="order-btn">
                                预定
                            </view>
                        </view>
                    </view>
                    <view class="ticket-item pad">
                        <view class="ticket-desc clear">
                            <view class="box-left left">
                                <view class="t-name">票种名称票种名称</view>
                                <text class="border-box">支持退票</text>
                            </view>
                            <view class="t-price right">￥150</view>
                        </view>
                        <view class="ticket-action">
                            <navigator class="ticket-intro" url="../notice/ticketDescript" hover-class="none">
                                票种说明 <image src="/assets/images/arrow_right.png" />
                            </navigator>
                            <view class="order-btn">
                                预定
                            </view>
                        </view>
                    </view>
                </view>
                <view class="scenic-spots-box">
                    <navigator class="tt section_flex_sp" url="../notice/scenicSpotsNotice" hover-class="none">
                        <view>景点须知</view>
                        <image src="/assets/images/arrow_icon.png" />
                    </navigator>
                    <view class="text-box">
                        <view class="text-title">景区取票</view>
                        <view class="text-desp">请在景区门口智慧凤凰取票点取票</view>
                    </view>
                </view>
            </view>
            <view  class="tab-cont-item">
                <view class="scenic-spots-intro">
                    景点介绍详情
                </view>
            </view>
        </view>
    </view>
</view>