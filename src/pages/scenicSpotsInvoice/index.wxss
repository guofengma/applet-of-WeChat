/* pages/invoice/index.wxss */

.search-wrap{
    padding: 11rpx 30rpx 0;
}
.search-bar-wrap{
    width: 100%;
    height: 80rpx;
    background: #F3F3F3;
    border-radius: 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.search-bar{
    font-family: PingFang-SC-Medium;
    font-size: 28rpx;
    color: #999999;
}
.icon_search{
    width: 34rpx;
    height: 32rpx;
}
.ui-list{
    margin-top: 43rpx;
}
.ui-list .ui-item{
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    position: relative;
    margin-bottom: 62rpx;
}
.ui-image{
    width: 200rpx;
    height: 150rpx;
    margin-right: 28rpx;
}
.ui-image image{
    width: 100%;
    height: 100%;
}
.ui-box{
    flex: 1;
}
.ui-box .ui-title{
    font-family: PingFangSC-Semibold;
    font-size: 34rpx;
    color: #333333;
    font-weight: bold;
}
.ui-box .ui-label{
    width: 160rpx;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 24rpx;
    border: 1px solid #FFA819;
    margin: 12rpx 0;
}
.ui-box .ui-num{
    font-size: 24rpx;
    color: #666666;
}
.ui-price{
    position: absolute;
    top: 32rpx;
    right: 30rpx;
    font-size: 24rpx;
}
.ui-price .m-color{
    font-size: 40rpx;
}
.m-color{
    color: #FFA819;
}