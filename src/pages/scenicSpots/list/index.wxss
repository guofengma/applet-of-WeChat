/* pages/invoice/index.wxss */

.search-wrap{
    padding: 11rpx 30rpx 0;
}
.search-bar-wrap{
    width: 100%;
    height: 80rpx;
    background: #F3F3F3;
    border-radius: 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.search-bar{
    font-family: PingFang-SC-Medium;
    font-size: 28rpx;
    color: #999999;
}
.icon_search{
    width: 34rpx;
    height: 32rpx;
}
.ui-list{
    margin-top: 13rpx;
}
.ui-item{
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
    position: relative;
}
.ui-item::after{
    content: "";
    border-top: 1rpx solid #F3F3F3;
    position: absolute;
    left: 30rpx;
    right: 30rpx;
    bottom: 0;
}
.ui-image{
    width: 200rpx;
    height: 150rpx;
    margin-right: 28rpx;
}
.ui-image image{
    width: 100%;
    height: 100%;
}
.ui-box{
    flex: 1;
    display: flex;
    justify-content: space-between;
}
.ui-box-l{
    flex: 1;
}
.ui-box-r{
    margin-top: 32rpx;
}
.ui-box .ui-title{
    font-size: 34rpx;
    color: #333333;
    font-weight: bold;
}
.ui-box .ui-label{
    width: 160rpx;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 24rpx;
    border: 1px solid #FFA819;
    margin: 12rpx 0;
}
.ui-box .ui-num{
    font-size: 24rpx;
    color: #666666;
}
.ui-price{
    font-size: 24rpx;
}
.ui-price .m-color{
    font-size: 40rpx;
}
.m-color{
    color: #FFA819;
}
.m-text{
    font-size: 32rpx;
    color: #FFA819;
}