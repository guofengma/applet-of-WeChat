<!--index.wxml-->
<view class="container">
    <swiper indicator-dots="{{indicatorDots}}" indicator-color="rgba(0,0,0,.2)" indicator-active-color="#FFA819"
        autoplay="autoplay">
        <block wx:for="{{adList}}" wx:key="img" wx:for-index="idx" wx:if="{{idx<1}}">
          <navigator hover-class="none" url="{{item.linkurl}}" >
            <swiper-item>
              <image src="{{imagePrefix}}{{item.photo}}" class="slide-image" width="100%"  mode="widthFix" />
            </swiper-item>
          </navigator>
        </block>
    </swiper>
    <!--<view class="banner">
      <navigator url="{{adList.linkurl}}" hover-class="none">
        <image src="{{adList.photo}}" class="slide-image" width="100%" height="100%"/>
      </navigator>
    </view>-->
    <view class="ui-grids">
      <block wx:for="{{moduleList}}" wx:for-index="idx" wx:key="module" wx:if="{{idx<8}}">
        <navigator url="{{item.linkUrl}}" class="grid" hover-class="none">
            <view class="ui_grid-icon"><image src="{{imagePrefix}}{{item.icon}}" /></view>
            <view class="ui_grid-label">{{item.name}}</view>
        </navigator>
      </block>
        
    </view>
    <view class="ui-hot-section">
      <text class="h-title">热门景点</text>
      <view class="h-top-fisrt">
        <image class="h-top-img" src="{{imagePrefix}}{{hotsList[0].fileList[0].src}}" />
        <image class="level-img" src="../../assets/images/top1.png" />
      </view>
      <view class="sm-title">{{hotsList[0].name}}"</view>
      <view class="ui-list">
        <view class="ui-item" wx:for="{{hotsList}}" wx:for-index="idx" wx:key="item" wx:if="{{idx>1}}">
          <navigator url="" hover-class="none">
            <view>
              <image class="h-top-img" src="{{item.fileList[0].src}}" />
              <image class="level-img" src="../../assets/images/top{{idx}}.png" />
            </view>
            <view class="h-name ellipsis">{{item.name}}</view>
          </navigator>
        </view>
      </view>
    </view>
</view>
