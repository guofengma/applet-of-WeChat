.container{
    background: #F0F4F7;
    min-height: 100%;
}
.ui-content{
    margin: 0 30rpx;
    display: flex;
}  
.ui-content .left{
    margin-right: 22rpx;
}
.item{
    width: 334rpx;
    background-color: #fff;
    margin-top: 30rpx;
    display: inline-block;
    border-radius: 12rpx;
    overflow: hidden;
}
.item-img{
    width: 100%;
    display: block;
}
.item-title{
    font-size: 28rpx;
    color: #333333;
    font-family: 'PingFang SC-Medium';
    margin: 27rpx 24rpx 22rpx;
    line-height: 40rpx;
    font-weight: 600;
}
.item .name{
    display: flex;
    padding: 0 24rpx 30rpx;
    align-items: center;
    font-size: 22rpx;
    color: #1e1e1e;
    font-family: 'PingFang SC-Medium';
    justify-content: space-between;
}
.item .name .avatar{
    width: 215rpx;
    display: flex;
    align-items: center;
}
.item .name .item-ava{
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
}
.item .name .name-title{
    flex: 1;
    margin-left: 12rpx;
    font-size: 24rpx;
    color: #888888;
}
.item .name .heart_{
    display: flex;
    align-items: center;
}
.item .name .heart{
    width: 30rpx;
    height: 26rpx;
    margin-right: 8rpx;
}
.item .name .heart-title{
    font-size: 24rpx;
    color: #888888;
}
